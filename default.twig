<!--[if gt IE 8]><!-->
<html class="no-js" lang="{{ page.seoLang }}">
<!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />
	<meta http-equiv="content-language" content="{{ page.seoLang }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

	<!-- Container -->
	<div class="container">
	
		<!-- Page Content -->
		<section class="content">

		    {{widget('content', 'title', {content: '<h1>BaseKit Baseplate Template</h1>'})|raw}}

		    {{widget('content', 'text-overview', {content: '<h2>Overview</h2><p>The BaseKit Baseplate is a minimal template for you to use as a starting point for development.</p>'})|raw}}

		    {{widget('content', 'text-next', {content: '<h2>What to do next</h2><p>Simply delete this markup and get building.</p>'})|raw}}

		    {{widget('content', 'text-complete', {content: '<h2>Once you&#39;ve finished building</h2><p>Upload your template to BaseKit. For more comprehensive help visit our <a href="http://developers.basekit.com/upload-template" target="_blank">upload your template</a> page.</p>'})|raw}}

		    {{widget('content', 'text-help', {content: '<h2>Help is at hand</h2><p>If you have any queries or worries during the process, never fear! Detailed help information and a <a href="http://knowledge.basekit.com" target="_blank">discussion forum</a> can be found on our <a href="http://developers.basekit.com" target="_blank">developer documentation</a> site.</p>'})|raw}}

			<!-- Main Widget Zone -->
			<section class="main-zone">

				<!-- Uncomment zone to display widgets -->
				{{zone('main')|raw}}
				{{zone('main')|raw}}

			</section>

		</section>
		<!-- End Page Content -->

	</div>
	<!-- End Container -->

    {% include basekit.bodyScript %}
</body>
</html>
